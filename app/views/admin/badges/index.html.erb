<h1>Listing badges</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Achieved count</th>
    <th>Badge type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @badges.each do |badge| %>
  <tr>
    <td><%= badge.name %></td>
    <td><%= badge.achieved_count %></td>
    <td><%= badge.badge_type %></td>
    <td><%= link_to 'Show', [:admin,badge] %></td>
    <td><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
    <td><%= link_to 'Destroy', [:admin,badge], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

